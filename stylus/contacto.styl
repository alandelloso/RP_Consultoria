@import 'mdc-card'

//Variables
bodybg = #EEE
lightcolor = #FF8B63
maincolor = #FF9800
darkcolor = #EF6C00 
darkestcolor = #E65100
breakcolor = #F50057
darkbreakcolor = #C51162
facebook = #3B5999
gplus = #BC2D1D
linkedin = #2A497F
muli = 'Muli', sans-serif
textob = #DDD
textow = #555
twitter = #1AB2E8

//VISION 1
section
	text-align center
	padding .3em
	h1
		text-align left
    
#map-canvas
	width 100%
	height 300px
	border-radius 0 0 5px 5px

.tarjeta-contacto
	background #FFF
	color rgba(0,0,0,0.8)
	box-shadow rgba(0,0,0,0.5) 3px 3px 5px
	border-radius 5px
	margin-bottom 1em
	.tarjeta-contacto__title
		background-color #222
		border-radius 5px 5px 0 0
	.tarjeta-contacto__content
		font-size 20px
		padding-bottom .5em
	div
		text-align center
	a 
		color bodybg
		text-decoration none
		font-weight bold


@media (min-width: 625px)
	.ccontainer
		max-width 1270px
		padding 0 10px
		margin 0 auto
		overflow hidden


@media (min-width: 1165px)
	.flex-container-top
		display -webkit-box
		display -moz-box
		display -ms-flexbox
		display -webkit-flex
		display flex
		flex-flow row wrap
		min-height 0
		min-width 0
		justify-content space-around
		align-items strech
		.flex-container-left
			flex-grow 1
			.mail, .datos
				height 47.3%
				vertical-align top
		.flex-container-right
			flex-basis 0
			flex-grow 2
	
	.flex-container-bottom
		display -webkit-box
		display -moz-box
		display -ms-flexbox
		display -webkit-flex
		display flex
		justify-content space-between
		flex-flow row wrap
		flex-align baseline
		.colectivos, .subtes, .afip
			flex-grow 1

		
