//VISION 1
section
	text-align center
	padding .3em
	h1
		text-align left
    
#map-canvas
	width 100%
	height 300px
	border-radius 0 0 5px 5px

.tarjeta-contacto
	background #FFF
	color rgba(0,0,0,0.8)
	box-shadow rgba(0,0,0,0.5) 3px 3px 5px
	border-radius 5px
	margin-bottom 1em
	.tarjeta-contacto__title
		background-color #222
		border-radius 5px 5px 0 0
	.tarjeta-contacto__content
		font-size 20px
		padding-bottom .5em
	div
		text-align center
	a 
		color bodybg
		text-decoration none
		font-weight bold


@media (min-width: 625px)
	.ccontainer
		max-width 1270px
		padding 0 10px
		margin 0 auto
		overflow hidden


@media (min-width: 1165px)
	#transportes
		display -webkit-box
		display -moz-box
		display -ms-flexbox
		display -webkit-flex
		display flex
		justify-content space-between
		.tarjeta-contacto
			width 600px
			.tarjeta-contacto__content
				padding 1em
		
