@import 'mdc-card'

//Variables
bodybg = #EEE
lightcolor = #FF8B63
maincolor = #FF9800
darkcolor = #EF6C00 
darkestcolor = #E65100
breakcolor = #F50057
darkbreakcolor = #C51162
facebook = #3B5999
gplus = #BC2D1D
linkedin = #2A497F
muli = 'Muli', sans-serif
textob = #DDD
textow = #555
twitter = #1AB2E8

//MIXINS
flexbox(value)
  if value == inline-flex
    display -webkit-inline-flex
    display -ms-inline-flexbox
    display inline-flex
  else if value == flex
    display -webkit-flex
    display -ms-flexbox
    display flex

//VISION 1
section
	text-align center
	padding .3em
	h1
		text-align left
    
#map-canvas
	width 100%
	height 300px
	border-radius 0 0 5px 5px

.hide-mobile
		display none

.hide-desktop 
		display block


@media (min-width: 625px)
	.ccontainer
		max-width 1270px
		padding 0 10px
		margin 0 auto
		overflow hidden
		text-align center


@media (min-width: 1165px)
	.flex-container-left, .flex-container-right
		flexbox flex
		flex-flow column wrap
		flex 1
		justify-content space-between
		align-items baseline
		min-width 45%
		
	.mail .content-wrap
		padding-bottom 38px
		
	
	.flex-container-main
		flexbox flex
		.mdc-card
			width 100%
	.mail 
		flex-grow 1
	
	.hide-desktop 
		display none
	
	.hide-mobile
		display block
	

		
