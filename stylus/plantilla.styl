//Fuentes
@import url("http://fonts.googleapis.com/css?family=Muli")
//Iconos
@font-face
  font-family 'icomoon'
  src url('../fonts/icomoon.eot?nww6i0')
  src url('../fonts/icomoon.eot?#iefixnww6i0') format('embedded-opentype'),
 url('../fonts/icomoon.woff?nww6i0') format('woff'),
		url('../fonts/icomoon.ttf?nww6i0') format('truetype'),
		url('../fonts/icomoon.svg?nww6i0#icomoon') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  font-family 'icomoon'
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-menu
  &:before
    content "\e604"

.icon-arrow-up
  &:before
    content "\e600"

.icon-pdf
  &:before
    content "\e605"

.icon-add
  &:before
    content "\e602"

.icon-subtract
  &:before
    content "\e603"

.icon-chevron-left
  &:before
    content "\e606"

.icon-twitter
  &:before
    content "\e607"

.icon-facebook
  &:before
    content "\e608"

.icon-google-plus
  &:before
    content "\e609"

.icon-linkedin
  &:before
    content "\e60a"

//Paleta
lightcolor = #FF8B63
maincolor = #FF9800
darkcolor = #EF6C00 
darkestcolor = #E65100
breakcolor = #F50057
darkbreakcolor = #C51162

//Variables
bodybg = #EEE
facebook = #3B5999
gplus = #BC2D1D
linkedin = #2A497F
muli = 'Muli', sans-serif
textob = #DDD
textow = #555
twitter = #1AB2E8
//VISTA 1
//Estilos por TAG
body
	background bodybg
	color textow
	font-family muli
	font-size 16px

footer
	background darkestcolor
	color bodybg
	height 85px
	max-height 85px
	text-align center
	span
		color lightcolor
	p 
		margin 0
		padding .2em 0

h1
	color darkcolor
	font-family muli

h2
	color maincolor
	font-family muli
	margin 0

header
	background maincolor
	height 50px
	max-height 50px
	overflow hidden
	padding .1em .3em
	figure
		display inline-block
		float right
	h2
		color bodybg
		display inline-block
		margin-top .4em
	#hgroup
		p
			display none
	img
		width 70px
	#social
		display none


hr
	border solid 2px maincolor
	margin 1em

nav
	display none

//Estilos por ID
#mmovile
	background darkcolor
	color bodybg
	height 40px
	max-height 40px
	overflow hidden
	text-align center
	a 
		color bodybg
		float left
		font-size 30px
		padding .18em .5em
		text-decoration none
	p
		display inline-block
		font-family muli
		margin .55em 0 .55em -1em

#mnav
	transition all .5s ease-out
	background darkcolor
	left -15em
	min-height 150%
	min-width 15em
	overflow hidden
	position absolute
	p
		color bodybg
		display inline-block
		font-family muli
		font-size 30px
		font-weight bold
		margin .5em 0 .5em .5em
	ul
		list-style none
		padding 0
		li
			font-size 18px
			transition all .5s ease
			&:hover
				background darkestcolor
			a
				color bodybg
				display block
				padding 1.5em 0 .5em 1em
				text-decoration none
	#cerrar
		background breakcolor
		border-radius 100%
		box-shadow rgba(0,0,0,0.5) 5px 5px 15px
		cursor pointer
		float right
		margin .5em 1em 0 0 
		position relative
		text-align center
		transition all .5s ease
		&:hover
			background darkbreakcolor
		#flechita
			color bodybg
			display block
			font-size 1.5em
			padding .7em .8em .7em .7em

#msocial
	background darkestcolor
	color bodybg
	font-family muli
	height 40px
	max-height 40px
	overflow hidden
	p
		display inline-block
		margin .55em 0 .55em .3em
	ul 
		display inline-block
		float right
		list-style none
		margin 0 .3em 0 0 
		padding 0
		li 
			display inline-block
			font-size 30px
		a
			color bodybg
			display block
			padding .20em .35em
			text-decoration none
	#m-facebook
		-webkit-transition all .5s ease
		-moz-transition all .5s ease
		-o-transition all .5s ease
		-ms-transition all .5s ease
		&:hover
			color facebook
	#m-twitter
		-webkit-transition all .5s ease
		-moz-transition all .5s ease
		-o-transition all .5s ease
		-ms-transition all .5s ease
		&:hover
			color twitter
	#m-gplus
		-webkit-transition all .5s ease
		-moz-transition all .5s ease
		-o-transition all .5s ease
		-ms-transition all .5s ease
		&:hover
			color gplus
	#m-linkedin
		-webkit-transition all .5s ease
		-moz-transition all .5s ease
		-o-transition all .5s ease
		-ms-transition all .5s ease
		&:hover
			color linkedin

//VISTA 2
@media (min-width: 845px)
	#mnav, #msocial, #mmovile
		display none

	nav
		background darkcolor
		display block
		height 40px
		max-height 40px
		overflow hidden
		z-index 100
		#tsocial
			display inline-block
			float right
			padding-right .5em
			p
				color bodybg
				display inline-block
				margin 0
				float left
				padding .65em 1em .2em 0
			ul
				li
					border none
					a
						border none
						font-size 30px
						padding .20em .25em .1em .25em
		#t-facebook
			-webkit-transition all .5s ease
			-moz-transition all .5s ease
			-o-transition all .5s ease
			-ms-transition all .5s ease
			&:hover
				color facebook
		#t-twitter
			-webkit-transition all .5s ease
			-moz-transition all .5s ease
			-o-transition all .5s ease
			-ms-transition all .5s ease
			&:hover
				color twitter
		#t-gplus
			-webkit-transition all .5s ease
			-moz-transition all .5s ease
			-o-transition all .5s ease
			-ms-transition all .5s ease
			&:hover
				color gplus
		#t-linkedin
			-webkit-transition all .5s ease
			-moz-transition all .5s ease
			-o-transition all .5s ease
			-ms-transition all .5s ease
			&:hover
				color linkedin
		ul
			display inline-block
			list-style none
			margin 0
			padding 0
			li
				display inline-block
				margin 0
				padding 0
				&:hover a
					border-bottom 5px solid maincolor
					transition all .2s ease	
				a
					border-bottom 5px solid darkestcolor
					color #FFF
					display block
					padding .65em 1em .25em 1em
					text-decoration none
					transition all .5s ease

	.selected
		border-bottom 5px solid maincolor

//VISTA 3
@media (min-width: 1165px)
	header 
		overflow hidden
		background-color maincolor
		height 100px
		max-height 100px
		#hgroup
			display inline-block
			vertical-align top
			#h1
				color #EEE
				display inline-block
				font-family muli
				font-size 36pt 
				margin 0
				padding 0 
			p
				color #EEE
				display inline-block
				font-family muli
				font-size 18pt
				margin 0
				padding 0 
		#social
			display inline-block
			text-align center
			float right
			p
				color bodybg
				font-family muli
				font-size 13pt
				margin 0
				padding 0 
			ul 
				margin .2em 0 0 0
				padding 0
				text-align center
				li 
					display inline-block
					font-size 1.2em
					list-style none
					margin-right .3em

	nav
		ul
			li
				a
					padding .65em 1em .26em 1em

		#tsocial
			display none

	#facebook 
		background facebook
		border-radius 100%
		margin 0
		transition all .5s ease-in
		box-shadow rgba(0,0,0,0.5) 3px 3px 5px
		a 
			color white
			cursor pointer
			font-size 20pt
			display block
			padding .5em
			text-decoration none
		&:hover
			background #4F79B7
			box-shadow rgba(0,0,0,0.5) 4px 4px 7px
			transition all .2s ease-in

	#gplus
		background gplus
		border-radius 100%
		transition all .5s ease-in
		box-shadow rgba(0,0,0,0.5) 3px 3px 5px
		a 
			color white
			cursor pointer
			display block
			font-size 20pt
			text-decoration none
			padding .5em
		&:hover
			background #EF392B
			box-shadow rgba(0,0,0,0.5) 4px 4px 7px
			transition all .2s ease-in

	#logo
		display inline-block
		float left
		img
			width 130px

	#twitter 
		background twitter
		border-radius 100%
		transition all .5s ease-in
		box-shadow rgba(0,0,0,0.5) 3px 3px 5px
		a 
			color white
			cursor pointer
			font-size 20pt
			display block
			padding .5em
			text-decoration none
		&:hover
			background #2DCEF9
			box-shadow rgba(0,0,0,0.5) 4px 4px 7px
			transition all .2s ease-in
		
	.container
		position: relative;
		background: inherit;
		padding: 0 10px;
		margin: 0 auto;
		max-width: 1270px;
		height: 120%;
		background-image url("../img/mundo.png")
		background-position 75% top 
		background-size 390px
		background-repeat no-repeat

	.navcontainer
		max-width: 1270px;
		padding: 0 10px;
		margin: 0 auto;
	