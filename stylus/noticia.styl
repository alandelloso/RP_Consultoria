//Variables
bodybg = #EEE
color1 = #F29700
color2 = #D98700
color3 = #B26F00
color4 = #734800
color5 = #332000
facebook = #3B5999
gplus = #BC2D1D
linkedin = #2A497F
muli = 'Muli', sans-serif
textob = #DDD
textow = #555
twitter = #1AB2E8

//VISTA
section
	text-align center

.consulta
	background rgba(0,0,0,0.5)
	border solid 3px color2
	border-radius 20px
	color textob
	display inline-block
	margin-bottom 1em
	margin-left 1em
	margin-top 1em
	max-width 270px
	padding .5em
	text-align center
	vertical-align top
	input, textarea
		border-radius 5px
	h2
		text-align left

.left-side
	p
		max-width 50em
		text-align justify
	a 
		color color1
	ul, ol
		li 
			max-width 50em
			text-align justify

.ccontainer
	margin 0 auto
	max-width 1270px
	overflow hidden		
	padding 0 10px

.required
	color color1
	font-weight bold	

@media (min-width: 845px)

	.ccontainer
		display inline-block
		p, ol, ul
			text-align justify
		h2, h1
			text-align left

	.consulta
		max-width 400px
		width 400px



@media (min-width: 1200px)

	section
		text-align left

	.consulta
		max-width 270px
		margin-top 2em
		margin-bottom 0
		
	.left-side
		display inline-block

