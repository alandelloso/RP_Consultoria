@import "mdc-card"
@import "mdc-button"

//Colores
lightcolor = #FF8B63
maincolor = #FF9800
darkcolor = #EF6C00 
darkestcolor = #E65100
breakcolor = #F50057
darkbreakcolor = #C51162

//Variables
bodybg = #EEE
color2 = #D98700
facebook = #3B5999
gplus = #BC2D1D
linkedin = #2A497F
muli = 'Muli', sans-serif
textob = #FFF
textow = #555
twitter = #1AB2E8

flexbox(value)
  if value == inline-flex
    display -webkit-inline-flex
    display -ms-inline-flexbox
    display inline-flex
  else if value == flex
    display -webkit-flex
    display -ms-flexbox
    display flex


//Vistas
section
	text-align center
	h1 
		text-align left

.relative
	position relative


@media (min-width: 1165px)
	.ccontainer
		max-width 1270px
		padding 0 10px
		margin 0 auto
		overflow hidden	
		h1
			margin-left .3em
			text-align left
	
	.mdc-card__media
		flexbox flex
		flex-flow row wrap
		justify-content space-between
		

