//Variables
bodybg = #EEE
color1 = #F29700
color2 = #D98700
color3 = #B26F00
color4 = #734800
color5 = #332000
facebook = #3B5999
gplus = #BC2D1D
linkedin = #2A497F
muli = 'Muli', sans-serif
textob = #DDD
textow = #555
twitter = #1AB2E8

//Vistas
section
	text-align center
#post-volunt
	background color1
	border solid 2px color3
	border-radius 10px
	display inline-block
	height 70px
	transition all .5s ease-in
	&:hover
		background color2
		
#postulacion-voluntaria
	display none
	form
		background rgba(237, 167, 76, 0.8)
		color textow
		display block
		margin .5em .3em
		overflow hidden
		padding .3em
		text-align center
		transition all 1s ease
		input 
			display inline-block
		input[type=text], input[type=email], input[type=number]
			background #FF9933
			margin .5em 0
			height 40px
			width 300px
			border solid 2px #B26F00
			color #EEE
			padding-left .3em
		::-webkit-input-placeholder
			color #EEE
			padding-left .3em
		:-moz-placeholder
			color #EEE
			padding-left .3em
		input[type=file]
			// padding .5em .2em
			margin .5em 0 1em 0
			max-width 300px
			max-height 40px
			background #FF9933
			border solid 2px #B26F00
			color #EEE
		label
			color color3
			font-weight bold
			font-style italic
		h2
			margin-bottom .5em
			color color3
			font-size 40px
		span
			color color4
			font-weight bold
		.post-file
			height 40px
			&::-webkit-file-upload-button
				visibility hidden
			&::before
				content 'Cargar CV'
				display inline-block
				background #B26F00
				color #EEE
				padding .65em 1em
				white-space nowrap
				cursor pointer
				font-weight 700
				transition all .5s ease-in
			&:hover::before
				background color2
		.post-enviar
			background color1
			border solid 2px color3
			border-radius 10px
			height 50px
			margin-bottom .5em
			transition all .5s ease
			&:hover
				background color2
	
.impar
	display none

.new-job
	background #EDDCC7
	margin 1em .3em
	max-width 545px
	text-align left
	vertical-align top
	.job-button
		background color1
		text-align center
		transition all .5s ease-out
		&:hover
			background color2
		a 
			color #EEE
			display block
			padding .5em 2.45em
			text-decoration none
	.job-info
		padding .5rem .3rem 0 .3rem
		img
			width 25px
	.job-title
		background color2
		color color4
		padding-left .3rem
		h3
			display block
			font-size 16pt
			margin 0
			padding .5em

.relative
	position relative
	
@media (min-width: 575px)
	.new-job
		width 545px
		display inline-block
		
@media (min-width: 845px)
	.new-job
		width 40%
		&:nth-child(even)
			margin-right 5%

@media (min-width: 1165px)

	#postulacion-voluntaria
		form
			width 1100px
			display inline-block
			input[type=text], input[type=email], input[type=number]
				transition all 1s ease
				&:focus
					background color2	
	
	.ccontainer
		max-width 1270px
		padding 0 10px
		margin 0 auto
		overflow hidden	
		h1
			margin-left .3em
			text-align left

	.new-job
		width 545px
		&:nth-child(even)
			margin-right auto
		.job-info
			display inline-block
			width 375px
		.job-button
			display inline-block
			vertical-align top
			a 
				padding 2em 2.15em