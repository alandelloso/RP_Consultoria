//VISTA
.center-me
	text-align center

.excluyente
	font-weight bold
	color darkbreakcolor
	font-size 16px
	
.info
	background-color #222
	max-width 250px
	text-align left
	padding .3em
	border-radius 20px 0 20px 0
	h2
		margin-bottom .5em
	h4
		color darkcolor
		margin 0
	p
		color breakcolor
		margin 0
		font-size 16px !important
	.info__pais
		img
			border-radius 100%
			display inline-block
			margin .5em 0 0 .5em
			width 40px
		.group
			display inline-block
			margin-left .5em
			margin-top .5em
			vertical-align top
	.info__modalidad
		margin 1em 0 .5em 0
		img
			border-radius 100%
			display inline-block
			margin .5em 0 0 .5em
			width 40px
		h4 
			display inline-block
			margin-left .5em
			margin-top 1.2em
			vertical-align top
			
.left-side
	text-align center
	color rgba(0,0,0,0.8)
	font-size 18px
	background-color #fff
	padding 0 .7em
	h2
		text-align left
	p
		line-height 150%
		text-align center
		max-width 40em
		display inline-block
	a 
		color color1
	ul
		list-style-image url('../img/item.png')
		list-style-position inside
		li 
			line-height 180%
			max-width 50em
			text-align left

.referencia
	font-weight bold

.ccontainer
	max-width 1270px
	padding 0 10px
	margin 0 auto
	overflow hidden

@media (min-width: 500px)
	.left-side
		background #FFF
		padding .5em
		margin .5em 0 .3em 0
		h1
			margin-top .3em
			text-align left

@media (min-width: 1165px)
	.left-side
		display inline-block
		width 95%
		padding 25px
		p
			text-align center
			max-width 40em
			font-size 25px
		ul
			font-size 25px